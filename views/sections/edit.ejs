<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="new-form">
			<h1 class="new-title">Edit existing section</h1>
	
			<form class="ui form inline" action="/civilizations/<%= civilization._id %>/sections/<%= section._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label>Name</label>
					<input name="section[name]" value="<%= section.name %>" placeholder="name" type="text">
				</div>

				<div class="form-group">
					<label>Image</label>
					<input name="section[image]" value="<%= section.image %>" placeholder="image url" type="text">
				</div>
				
				<div class="form-group">
			    	<label>Description</label>
					<textarea name="section[description]" placeholder="add a description"><%= section.description %></textarea>
				</div>
				
				<button class="ui reverse green button">Update</button>
			</form>
			
				<a class="ui reverse yellow button" href="/civilizations/<%= civilization._id %>/sections/<%= section._id %>">Go back</a>
		</div>		
	</div>
</div>

<% include ../partials/footer %>